<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="popupMenuStyle">@style/request_popup_style</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="request_popup_style" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:font">@font/architects_daughter</item>
        <item name="android:popupBackground">@color/background</item>
    </style>

</resources>
