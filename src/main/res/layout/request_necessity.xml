<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/request_necessity_fragment"
    android:background="@color/background" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/gradient_background">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/reqNecTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/architects_daughter"
            android:text="@string/request_necessity"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/color_text"
            android:textSize="30sp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/exit"
            android:elevation="12dp"
            android:background="@drawable/exit_button" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/nec_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/architects_daughter"
                android:text="@string/type"
                android:textColor="@color/color_secondary_text"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/nec_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:autofillHints="@string/type"
                android:background="@color/white"
                android:spinnerMode="dropdown" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/architects_daughter"
                android:text="@string/description"
                android:textColor="@color/color_secondary_text"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/nec_desc_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:fontFamily="@font/architects_daughter"
                android:hint="@string/description_hint"
                android:inputType="textMultiLine"
                android:lines="4"
                android:paddingStart="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/color_text"
                android:textColorHint="@color/color_secondary_text" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/set_loc_button_nec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_gradient_background"
                android:fontFamily="@font/architects_daughter"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/set_loc"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="18sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/post_necessity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/gradient_button_drawable"
                android:enabled="false"
                android:fontFamily="@font/architects_daughter"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="@string/post_necessity"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>